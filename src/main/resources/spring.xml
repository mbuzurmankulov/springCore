<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.epam.spring.core.domain.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="Sponge Bob"/>
    </bean>

    <bean id="eventLogger" class="com.epam.spring.core.loggers.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="com.epam.spring.core.loggers.FileEventLogger" init-method="init">
        <constructor-arg value="output.txt" />
    </bean>

    <bean id="cacheFileEventLogger" class="com.epam.spring.core.loggers.CacheFileEventLogger"
          init-method="init"
          destroy-method="destroy">
        <constructor-arg value="1" type="java.lang.Integer"/>
        <constructor-arg value="output.txt" />
    </bean>

    <bean id="app" class="com.epam.spring.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
    </bean>

    <bean id="event" class="com.epam.spring.core.domain.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.time.LocalDate"
                factory-method="now"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat"
          factory-method="getDateTimeInstance"/>

</beans>